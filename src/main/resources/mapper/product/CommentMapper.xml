<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxw.store.project.product.mapper.CommentMapper">

    <resultMap id="CommentResult" type="Comment">
        <id property="id" column="io"/>
        <result property="businessId" column="business_id"/>
        <result property="productId" column="product_id"/>
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="coverUrl" column="coverUrl"/>
        <result property="content" column="content"/>
        <result property="score" column="score"/>
        <result property="deleteFlag" column="delete_flag"/>
        <result property="createTime" column="created_at"/>
    </resultMap>


    <insert id="create" parameterType="Comment" useGeneratedKeys="true" keyProperty="id">
        insert `gxw_product_comment`  (business_id,product_id,order_id,user_id,user_name,cover_url,content,score)
        value (#{businessId},#{productId},#{orderId},#{userId},#{userName},#{coverUrl},#{content},#{score})
    </insert>


</mapper>